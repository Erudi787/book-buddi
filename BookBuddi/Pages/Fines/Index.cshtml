@page
@model BookBuddi.Pages.Fines.IndexModel
@{
    ViewData["Title"] = "Fines";
}

<h1>Fines Management</h1>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Member</th>
            <th>Transaction ID</th>
            <th>Amount</th>
            <th>Reason</th>
            <th>Issue Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fine in Model.Fines)
        {
            <tr style="@(fine.Status == BookBuddi.Models.Enums.FineStatus.Unpaid ? "background-color: #ffffcc;" : "")">
                <td>@fine.FineId</td>
                <td>@fine.Member?.FirstName @fine.Member?.LastName</td>
                <td>@fine.TransactionId</td>
                <td>$@fine.Amount.ToString("F2")</td>
                <td>@fine.Reason</td>
                <td>@fine.IssueDate.ToString("yyyy-MM-dd")</td>
                <td>@fine.Status</td>
                <td>
                    @if (fine.Status == BookBuddi.Models.Enums.FineStatus.Unpaid)
                    {
                        <a href="/Fines/Pay?id=@fine.FineId">Pay</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/">Back to Home</a></p>
