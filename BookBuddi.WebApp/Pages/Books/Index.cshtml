@page
@model BookBuddi.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<h1>@(userRole == "Admin" ? "Books Management" : "Browse Books")</h1>

@if (userRole == "Admin")
{
    <p><a href="/Books/Create">Add New Book</a></p>
}

<form method="get">
    <input type="text" name="searchTerm" placeholder="Search books..." value="@Model.SearchTerm" />
    <button type="submit">Search</button>
    <a href="/Books/Index">Clear</a>
</form>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Category</th>
            <th>Genre</th>
            <th>Available Copies</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.BookTitle</td>
                <td>@book.ISBN</td>
                <td>@(book.CategoryName ?? $"ID: {book.CategoryId}")</td>
                <td>@(book.GenreName ?? $"ID: {book.GenreId}")</td>
                <td>@book.AvailableCopies</td>
                <td>@book.Status</td>
                <td>
                    <a href="/Books/Details?id=@book.BookId">Details</a>
                    @if (userRole == "Admin")
                    {
                        <text> | <a href="/Books/Edit?id=@book.BookId">Edit</a></text>
                        <text> | <a href="/Books/Delete?id=@book.BookId">Delete</a></text>
                    }
                    @if (userRole == "Member" && book.AvailableCopies > 0)
                    {
                        <text> | <a href="/Borrowing/Borrow?bookId=@book.BookId">Borrow</a></text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/">Back to Home</a></p>
